{
  "name": "volunteer-portal",
  "version": "1.0.0",
  "description": "AnimeCon Volunteer Portal",
  "scripts": {
    "build": "cross-env NODE_OPTIONS='--openssl-legacy-provider' NODE_PROD=1 webpack --mode production",
    "build-api": "ts-json-schema-generator --path src/api/*.ts -j basic --additional-properties -o src/api/schema.json",
    "serve": "cross-env NODE_OPTIONS='--openssl-legacy-provider' REACT_APP_API_HOST=https://stewards.team webpack serve",
    "test": "jest"
  },
  "author": "Peter Beverloo <peter@animecon.nl>",
  "license": "MIT",
  "private": true,
  "bugs": {
    "url": "https://github.com/AnimeNL/volunteer-portal/issues"
  },
  "homepage": "https://github.com/AnimeNL/volunteer-portal#readme",
  "sideEffects": false,
  "dependencies": {
    "@emotion/react": "^11.9.3",
    "@emotion/styled": "^11.9.3",
    "@mui/icons-material": "^5.8.4",
    "@mui/lab": "^5.0.0-alpha.88",
    "@mui/material": "^5.8.6",
    "@mui/x-date-pickers": "^5.0.0-alpha.7",
    "idb-keyval": "^6.2.0",
    "moment": "^2.29.3",
    "moment-timezone": "^0.5.34",
    "mui-sx": "^1.0.0",
    "preact": "^10.8.2",
    "preact-markdown": "^2.1.0",
    "preact-render-to-string": "^5.2.0",
    "preact-router": "^4.0.1",
    "react-avatar-editor": "^13.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.18.6",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/preset-typescript": "^7.18.6",
    "@types/jest": "^28.1.3",
    "@types/react": "^17.0.39",
    "@types/react-avatar-editor": "^12.0.0",
    "@types/react-dom": "^17.0.11",
    "babel-loader": "^8.2.5",
    "clean-webpack-plugin": "^4.0.0",
    "copy-webpack-plugin": "^11.0.0",
    "cross-env": "^7.0.3",
    "fake-indexeddb": "^3.1.8",
    "html-webpack-plugin": "^5.5.0",
    "jest": "^28.1.1",
    "jest-environment-jsdom": "^28.1.1",
    "jest-fetch-mock": "^3.0.3",
    "jest-mock-console": "^2.0.0",
    "moment-locales-webpack-plugin": "^1.2.0",
    "moment-timezone-data-webpack-plugin": "^1.5.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "ts-jest": "^28.0.5",
    "ts-json-schema-generator": "^1.0.0",
    "ts-loader": "^9.3.1",
    "typescript": "^4.7.4",
    "webpack": "^5.73.0",
    "webpack-bundle-analyzer": "^4.5.0",
    "webpack-cli": "^4.10.0",
    "webpack-dev-server": "^4.9.2",
    "workbox-webpack-plugin": "^6.5.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testEnvironment": "jsdom",
    "testRegex": "\\.test\\.(js|ts|tsx)$",
    "moduleFileExtensions": [
      "js",
      "ts",
      "tsx"
    ],
    "setupFiles": [
      "./jest.setup.js"
    ]
  }
}
