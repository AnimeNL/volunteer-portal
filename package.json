{
  "name": "volunteer-portal",
  "version": "1.0.0",
  "description": "AnimeCon Volunteer Portal",
  "scripts": {
    "build": "webpack --mode production",
    "build-api": "ts-json-schema-generator --path src/api/*.ts -j basic -o src/api/schema.json",
    "serve": "cross-env REACT_APP_API_HOST=https://stewards.team webpack serve",
    "test": "jest"
  },
  "author": "Peter Beverloo <peter@animecon.nl>",
  "license": "MIT",
  "private": true,
  "bugs": {
    "url": "https://github.com/AnimeNL/volunteer-portal/issues"
  },
  "homepage": "https://github.com/AnimeNL/volunteer-portal#readme",
  "sideEffects": false,
  "dependencies": {
    "@emotion/react": "^11.6.0",
    "@emotion/styled": "^11.6.0",
    "@mui/icons-material": "^5.1.0",
    "@mui/lab": "^5.0.0-alpha.54",
    "@mui/material": "^5.1.0",
    "idb-keyval": "^6.0.3",
    "moment": "^2.29.1",
    "moment-timezone": "^0.5.34",
    "preact": "^10.5.15",
    "preact-markdown": "^2.0.0",
    "preact-render-to-string": "^5.1.19",
    "preact-router": "^3.2.1",
    "react-avatar-editor": "^12.0.0",
    "ts-loader": "^9.2.6"
  },
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@babel/plugin-proposal-class-properties": "^7.16.0",
    "@babel/preset-typescript": "^7.16.0",
    "@types/jest": "^27.0.2",
    "@types/react-avatar-editor": "^10.3.6",
    "babel-loader": "^8.2.3",
    "clean-webpack-plugin": "^4.0.0",
    "copy-webpack-plugin": "^9.1.0",
    "cross-env": "^7.0.3",
    "fake-indexeddb": "^3.1.7",
    "html-webpack-plugin": "^5.5.0",
    "jest": "^27.3.1",
    "jest-fetch-mock": "^3.0.3",
    "jest-mock-console": "^1.2.3",
    "moment-locales-webpack-plugin": "^1.2.0",
    "moment-timezone-data-webpack-plugin": "^1.5.0",
    "ts-jest": "^27.0.7",
    "ts-json-schema-generator": "^0.97.0",
    "typescript": "^4.4.4",
    "webpack": "^5.64.1",
    "webpack-bundle-analyzer": "^4.5.0",
    "webpack-cli": "^4.9.1",
    "webpack-dev-server": "^4.5.0"
  },
  "engines": {
    "node": ">=15.0.0"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testEnvironment": "jsdom",
    "testRegex": "\\.test\\.(js|ts|tsx)$",
    "moduleFileExtensions": [
      "js",
      "ts",
      "tsx"
    ],
    "setupFiles": [
      "./jest.setup.js"
    ]
  }
}
